<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">

    <title>Alb - Sign Up</title>
</head>
<body>

    <%- include("./partials/nav_not_loged.ejs") %>

    <main id="signup-main-content">
        <div class="container-form">
            <h1>Sign Up</h1>

            <form action="/signup" method="post">
                <div id="form-sides">

                    <div class="form-side-one">
                        <div>
                            <label for="email">Email </label>
                            <input type="email" name="email" id="email" placeholder="email..." required>
                        </div>
        
                        <div>
                            <label for="name">Name </label>
                            <input type="text" name="name" id="name" placeholder="name..">
                        </div>
        
                        <div>
                            <label for="password">Password </label>
                            <input type="password" name="password" id="password" placeholder="pass..." required>
                        </div>
                    </div>

                    <div class="form-side-two"> 
                        <label for="bio">Bio </label>
                        <textarea type="text" name="bio" id="bio" rows="10" cols="35" placeholder="Write Something about youself..."></textarea>
                    </div>
                    
                </div>

                <hr style="color: rgb(180, 180, 180); height: 0px; width: 650px;">
                
                <div class="submit-button-container">
                    <button type="submit" id="submit-button-signup">Sign Up!</button>
                </div>
            </form>
            <div class="container-login-redirect">
                <h3>Already have an account?</h3>
                <a href="/login">Log In!</a>
            </div>
            
        </div>
    </main>
    
</body>
</html>